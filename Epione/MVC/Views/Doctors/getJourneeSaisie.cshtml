
@{
    ViewBag.Title = "getJourneeSaisie";
    Layout = "~/Views/Shared/_DoctorsLayout.cshtml";
}

@Styles.Render("~/getJourneeSaisie/css")
@if(ViewBag.error == 1)
{
    <div class="container">
        <div class="row">
            <div class="col-lg-12 alert alert-danger">
                Date Incorrect !!
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12" style="text-align : center">@Html.ActionLink("Go Back", "Calendrier", "Doctors")</div>
        </div>
    </div>
}else
{


<div class="container journeeSaisie">
    <div class="row">
        <div class="col-lg-12 title">
            <h2>Jounée @ViewBag.date</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">Heure</div>
        <div class="col-lg-3">Disponibilité</div>
        <div class="col-lg-3">Patient</div>
        <div class="col-lg-3">Action</div>
    </div>
    @foreach (dynamic h in ViewBag.result)
    {
        String time = h.time;
        <div class="row">
            <div class="col-lg-3">@time.Substring(0,5)</div>
            @if(h.disponible == true){
             <div class="col-lg-3" style="color : springgreen">Disponible</div>
            }else{
            <div class="col-lg-3">Occupée</div>
            }
            <div class="col-lg-3">---</div>
            <div class="col-lg-3 action">
                <div class="row ">
                    <div class="col-lg-6"><input type="submit" class="btn btn-warning" value="Modifier"/></div>
                    <div class="col-lg-6"><input type="submit" class="btn btn-danger" value="Supprimer"/></div>
                </div>
                
            </div>
        </div>
      
    }

</div>


}